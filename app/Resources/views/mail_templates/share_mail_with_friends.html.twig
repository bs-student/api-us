{% block body -%}

    <!doctype html>
    <html>
    <head>
        <meta charset="utf-8">
        <title>textbook exchange made easy: student2student.com newsletter</title>
        <style type="text/css">
            body, td, th {
                font-family: Gotham, "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 14px
            }
            a:link {
                color: #000000;
                text-decoration: none;
            }
        </style>
